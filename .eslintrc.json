{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "node": true,
        "jest/globals": true
    },

    "extends": [ "airbnb", "plugin:jest/recommended" ],
    
    "plugins": [ "react", "jest", "import" ],

    "parser": "babel-eslint",

    "rules":{
        "func-names": ["error","never"],
        "quotes": ["error", "double"],
        "indent": ["error", 4],

        // ignores import/no-extraneous-dependencies for spec files
        "import/no-extraneous-dependencies": ["error", {"devDependencies": ["**/*.spec.{js,jsx}"]}]
    }
}