{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "node": true,
        "jest/globals": true
    },

    "extends": [ "airbnb", "plugin:jest/recommended" ],
    
    "plugins": [ "react", "jest" ],

    "parser": "babel-eslint",

    "rules":{
        "func-names": ["error","never"],
        "quotes": ["error", "double"],
        "indent": ["error", 4],
        "global-require": ["off"],
        "react/no-render-return-value": ["off"]
    }
}